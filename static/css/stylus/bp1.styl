body
	font-family bodyFont
	
.Header-container
	background rgba(#716b5c,1)
	height 80px
	
.Header-logo
	background url(../img/logoNav-small.png)
	background-repeat no-repeat
	background-position 0
	width 80px
	height 80px
	background-size: 80px 60px

.MainMenu-icon 
	font-size 2.5em
	display inline-block
	position absolute
	top 10px 
	right 15px
	
.icon-menu
	float right
	color white
	
.MainMenu-container
	background secundariDark
	text-align center
	padding 10px 0  
	margin 0

.MainMenu-option
	display inline-block
	width 100%
	padding 15px 0
	
.MainMenu-link
	color white
	text-decoration none
	font-weight 600
	

.MainMenu
.MainSection-message
	display none
	
.MainSection
	background: url(../img/hero/home_small.jpg);
	background-repeat: no-repeat;
	background-position: -350px;
	background-size: cover;
	padding 60px 0 80px 0
	
.MainSection-title
	color white
	text-shadow 1px 1px 2px rgba(black,.5)
	margin 0
	padding 70px 0 40px 0
	font-size 1.68em
	line-height 1.4em