.CourseList-course
	position relative
	display inline-block
	border-bottom 1px solid rgba(black,.3)
	width 100%
	padding 25px 0 35px 0

.CourseList-courseData
	display inline-block
	position absolute
	top -20px
	
.CourseList-courseInfo
	display inline-block
	margin 0 0 0 80px

.CourseList-courseTitle
	font-size 1.315em
	font-weight 600
	line-height 1.2em
	margin 0 0 .5em 0

.CourseList-courseGoblalLink
	position absolute
	top 0
	right 0
	bottom 0
	left 0

.saberMas
	color primari
	font-weight 600
	display block

.CourseList-courseLink
	color primari
	font-weight 600
	display block
	margin 1em 0 0 0
	width 140px
