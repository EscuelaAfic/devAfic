// Mailchimp

.Newsletter
	display none	


// Footer


.Footer
	background secundariDark
	padding 20px 0 200px 0px
	color white
	text-align center

.Footer-column
	display inline-block
	width 100%
	text-align left
	margin 10px 0 30px 0

.Footer-contactInfo
	display block
	max-width 270px
	margin -20px 0 0 0
	p
		font-weight 600
		margin 0 0 0 30px
	&:before
		position relative
		top 25px
		margin 0 
		font-size 20px

.Footer-logo
	display block
	background url(../img/logoSmall.png)
	background-repeat no-repeat
	background-position 0
	width 100px
	height 73.5px
	background-size: 100px 73.5px

.Footer-networkTitle
	margin 1em 0 0 0 
	display inline-block
	h4
		display inline-block
		color white
		font-weight 600
		border-right 1px solid white
		padding 0 1em 0 0 
		font-size 1.125rem

.Footer-networkList
	display inline-block

.Footer-networkLink
	display inline-block
	font-size 20px
	color white
	vertical-align middle



	


