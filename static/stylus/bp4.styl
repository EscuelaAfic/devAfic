// CourseBanner

.CourseBanner-title
	font-size 2.562em

	
// CourseNavigation
	
.sub-nav
	display block
	// padding 0 20px

.sub-nav dt a, 
.sub-nav dd a
	margin 1em 0 0 0 
	display inline-block

.sub-nav dt a, 
.sub-nav dd a, 
.sub-nav li a
	color white
	font-family bodyFont
	font-weight 600
	padding .1em .5em
	-webkit-filter: grayscale(1) sepia(0.5);
	transition .1s
	-webkit-transition .1s
	&:hover 
		color white	
		-webkit-filter: grayscale(0) sepia(0);


