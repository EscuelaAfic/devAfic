.Header
	background rgba(#13140a,.3)
	height 80px
	position relative
	z-index 3

.Header-logo
	background url(../img/logoNav-big.png)
	background-repeat no-repeat
	background-position 0px 
	width 320px
	background-size: 268px 60px

.Header-container
	background none
	position relative
	z-index 1
	
.MainMenu-icon 
	display none

.MainMenu
	display block
	margin -55px auto 0 auto
	padding 0 15px
	max-width 1000px
	position relative
	z-index 5
	
.MainMenu-container
	background none
	text-align right
	padding 0 
	margin 0 
	position relative
	z-index 2

.MainMenu-option
	display inline-block
	padding 0
	width 7%
	line-height 1.3em
	margin 0 10px
	text-align left
	
.bordeLateral
	border-right 2px solid white
	padding .7em 1.3em 0 0 
	
.MainSection
	background url(../img/hero/home_extra.jpg)
	background-repeat no-repeat
	background-position center top
	background-size cover
	padding 140px 0 140px 0
	position relative
	top -80px
	z-index 0

.MainSection-message
	display block
	position absolute
	top 0 
	right 30px
	
.MainSection-title
	width 65%
	
.MainSection-ctaContainer
	display block
	
