
// Header

.Header
	background rgba(#13140a,.3)
	height 80px
	position relative
	z-index 3

.Header-container
	background none
	position relative
	z-index 1
	
.MainMenu-icon 
	display none

.MainMenu
	display inline-block
	float right
	position relative
	top -80px
	right 15px
	z-index 5
	
.MainMenu-container
	background none
	text-align right

.MainMenu-option
	display inline-block
	width auto
	max-width 50px
	line-height 1.3em
	margin 0 15px
	text-align left
	

.pageActive
	border-bottom 5px solid primari
	padding 0 0 9px 0 
	

// MainSection

.MainSection
	background url(../img/hero/home_extra.jpg)
	background-repeat no-repeat
	background-position center top
	background-size cover
	padding 140px 0 140px 0
	position relative
	top -80px
	z-index 0

.MainSection-message
	display block
	position absolute
	top 0 
	right 30px
	
.MainSection-title
	width 65%
	
.MainSection-ctaContainer
	display block
	

// NextEvent

.NextEvent
	display block
	margin -5em 0 0 0 
	
	
.NextEvent-date
	width 3em

.NextEvent-title
	font-size 1.5em



// CourseBanner

