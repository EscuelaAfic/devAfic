
// CourseNavigation
	
.sub-nav
	display block

.sub-nav dt a, 
.sub-nav dd a
	margin 1em 0 0 0 
	display inline-block

.sub-nav dt a, 
.sub-nav dd a, 
.sub-nav li a
	color white
	font-family bodyFont
	font-weight 600
	padding .1em .5em
	-webkit-filter: grayscale(1) sepia(0.5);
	transition .1s
	-webkit-transition .1s
	&:hover 
		color white	
		-webkit-filter: grayscale(0) sepia(0)


// Footer

.Footer
	text-align center
	padding 20px 0 50px 0px

.Footer-container
	display inline-block
	padding 0 80px
	box-sizing border-box
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	width 100%

.Footer-column
	display inline-block
	width 45%
	text-align left
	margin 10px 0 30px 0
	&:first-child
		margin 50px 0 0 0

.Footer-logoContainer
	text-align center

.Footer-logo
	display inline-block
	background url(../img/logoVertical.png)
	background-repeat no-repeat
	background-position 0
	width 147px
	height 150px
	background-size: 147px 150px
	
.Footer-network
	text-align center