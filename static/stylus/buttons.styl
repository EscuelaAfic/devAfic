.btn-big
	border-radius 4px
	color white
	font-size 1.3em
	letter-spacing -.01em
	font-weight 600
	padding .6em .75em
	text-decoration none

.btn-Green
	background #7dcd40
	border-bottom 3px solid #6dae33
	
.btn-Red
	background #ff4842
	border-bottom 3px solid #9c211f
	
.btn-label
	display inline-block
	margin .7em 0 0 1em
	padding .7em 0 .7em 1em 
	border-left dotted 1px gray