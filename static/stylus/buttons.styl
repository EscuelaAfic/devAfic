
.btn
	border none
	border-radius 4px
	color white
	box-shadow inset 0 -2px rgba(0,0,0,0.3)
	text-decoration none
	box-sizing border-box
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	transition 0.2s
	-webkit-transition 0.2s
	&:hover
		color white

.btn-big
	font-size 1.3em
	font-weight 600
	letter-spacing -.01em
	padding .6em .75em
	
.btn-small
	font-size 15px
	font-weight 600
	height 38px
	letter-spacing -.01em
	padding .6em .75em
	line-height 15px

.btn-Green
	background #7dcd40
	
.btn-Red
	background #ff4842
	
.btn-label
	display inline-block
	margin .7em 0 0 1em
	padding .7em 0 .7em 1em 
	border-left dotted 1px gray