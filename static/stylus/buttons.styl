
.btn
	border none
	border-radius 4px
	color white
	box-shadow inset 0 -2px rgba(0,0,0,0.3)
	text-decoration none
	box-sizing border-box
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	transition 0.2s
	-webkit-transition 0.2s

.btn-big
	font-size 1.3em
	font-weight bold
	letter-spacing -.01em
	padding .6em .75em
	
.btn-small
	font-size 15px
	font-weight bold
	height 38px
	letter-spacing -.01em
	padding .6em .75em
	line-height 15px

.btn-Green
	color white
	background #7dcd40
	&:hover
		color white
	
.btn-Red
	background #ff4842
	color white
	&:hover
		color white
	
.btn-Gray
	background rgba(black,.1)
	color rgba(black,.7)
	&:hover
		color rgba(black,.7)

.btn-White
	color rgba(black,.7)
	background white
	&:hover
		color rgba(black,.7)
	
.btn-label
	display inline-block
	margin .7em 0 0 1em
	padding .7em 0 .7em 1em 
	border-left dotted 1px gray